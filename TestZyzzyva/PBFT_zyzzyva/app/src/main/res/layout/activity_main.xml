<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="45dp"
        android:text="Please choose your test information:"
        android:textSize="20dp"
        android:textColor="#000000"
        />


    <EditText
        android:id="@+id/edit_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="18sp"
        android:hint="Type the test message size in Byte"
        android:maxLines="1"
        />
    <EditText
        android:id="@+id/edit_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="18sp"
        android:hint="Type the test requests time interval in ms"
        android:maxLines="1"
        />

    <Button
        android:id="@+id/button_intialize"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="System Initialization"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_send"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="25dp"
        android:layout_width="360dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Transaction Sending"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_view2"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="System status:"
        />
    
    <TextView
        android:id="@+id/text_view3"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/textview_border"
        android:text=""
        android:textColor="#000000"
        android:scrollbars="vertical"
        />

</LinearLayout>
